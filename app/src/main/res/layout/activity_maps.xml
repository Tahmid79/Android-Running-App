<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="389dp"
        android:layout_height="519dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        map:layout_constraintBottom_toTopOf="@+id/button"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="49dp"
        android:text="Button"
        map:layout_constraintBottom_toTopOf="@+id/button2"
        map:layout_constraintEnd_toStartOf="@+id/distMet"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/map" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="67dp"
        android:text="Button"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toEndOf="@+id/distMet"
        map:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/distMet"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="54dp"
        android:text="TextView"
        android:textSize="24sp"
        map:layout_constraintEnd_toStartOf="@+id/button2"
        map:layout_constraintStart_toEndOf="@+id/button"
        map:layout_constraintTop_toBottomOf="@+id/map" />


</androidx.constraintlayout.widget.ConstraintLayout>